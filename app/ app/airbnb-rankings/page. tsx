function StatCard({
  label,
  value,
  note
}: {
  label: string;
  value: string;
  note: string;
}) {
  return (
    <div className="bg-white border rounded-2xl p-4 shadow-sm">
      <p className="text-xs text-slate-500 mb-1">{label}</p>
      <p className="text-xl font-semibold mb-1">{value}</p>
      <p className="text-xs text-slate-600">{note}</p>
    </div>
  );
}

function ReviewTheme({ title, text }: { title: string; text: string }) {
  return (
    <div className="bg-white border rounded-2xl p-4 shadow-sm">
      <h3 className="font-semibold mb-1">{title}</h3>
      <p>{text}</p>
    </div>
  );
}

function ReviewCard({ name, quote }: { name: string; quote: string }) {
  return (
    <div className="bg-white border rounded-2xl p-4 shadow-sm">
      <p className="font-semibold mb-1">{name}</p>
      <p className="italic text-slate-700">&ldquo;{quote}&rdquo;</p>
    </div>
  );
}